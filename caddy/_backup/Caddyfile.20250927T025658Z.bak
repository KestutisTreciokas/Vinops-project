vinops.online, www.vinops.online {
  encode zstd gzip

  # 1) Явный редирект корня на /en (до любых проксей)
  redir / /en 308

  # 2) Все пути, которые НЕ под /en или /ru и НЕ статика — редирект на /en{uri}
  @static path /favicon.ico /robots.txt /sitemap.xml /sitemap* /jsonld* /_next/* /assets/*
  @noLocale {
    not path_regexp hasLocale ^/(en|ru)(/|$)
    not path /favicon.ico /robots.txt /sitemap.xml /sitemap* /jsonld* /_next/* /assets/*
  }
  redir @noLocale /en{uri} 308

  # 3) Всё остальное — в Next
  reverse_proxy web:3000
}
