# Caddyfile — vinops.online (API без strip пути)
vinops.online, www.vinops.online {
	encode zstd gzip

	# Базовые security-заголовки (HSTS на периметре, не здесь)
	header {
    Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
		X-Frame-Options "SAMEORIGIN"
		X-Content-Type-Options "nosniff"
		Referrer-Policy "strict-origin-when-cross-origin"
	}

	# API: важно — НЕ использовать handle_path (он срезает /api)
	@api path /api/*
	handle @api {
		reverse_proxy vinopsrestore-web-1:3000 {
			header_up Host {host}
			header_up X-Forwarded-Proto {scheme}
		}
	}

	# Остальной трафик — на Next
	handle {
		reverse_proxy vinopsrestore-web-1:3000 {
			header_up Host {host}
			header_up X-Forwarded-Proto {scheme}
		}
	}
}
